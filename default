server {
    listen 80;
    server_name 45.207.49.68;

    location /static/ {
        root /var/www/html;  # 假设你的静态文件在 /var/www/html 下
        try_files $uri $uri/ =404;  # 如果文件不存在则返回 404
    }

    # 配置 WebSocket 反向代理
    location /socket.io/ {
        proxy_pass http://127.0.0.1:8080;  # 将 WebSocket 请求转发到后台服务
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
}
